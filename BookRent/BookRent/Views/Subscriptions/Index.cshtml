@model IEnumerable<BookRent.Models.Subscription>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subscriptiondays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfDays)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subscriptiondays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfDays)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SubscriptionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SubscriptionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SubscriptionID })
        </td>
    </tr>
}

</table>
